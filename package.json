{
  "name": "js13kgames-2016",
  "version": "0.0.1",
  "scripts": {
    "clean": "rm -f archive.zip && rm -rf test",
    "prebuild": "npm run clean && mkdir -p temp",
    "build": "npm run build:markup && npm run build:scripts && npm run build:archive",
    "build:markup": "jade < src/index.jade > temp/index.html",
    "build:scripts": "rollup -c",
    "build:archive": "zip -rj archive temp/*",
    "postbuild": "node checkSize.js",
    "prestart": "npm run build",
    "start": "npm run localhost & npm run watch",
    "localhost": "browser-sync start --server temp --files temp",
    "watch": "npm run watch:markup & npm run watch:scripts",
    "watch:markup": "nodemon -e jade --ignore temp -x \"npm run build:markup\"",
    "watch:scripts": "nodemon -e js --ignore temp -x \"npm run build:scripts && node checkSize.js\""
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "1.2.0",
    "browser-sync": "2.14.0",
    "jade": "1.11.0",
    "nodemon": "1.10.0",
    "rollup": "0.34.8",
    "rollup-plugin-babel": "2.6.1",
    "rollup-plugin-uglify": "1.0.1"
  }
}
